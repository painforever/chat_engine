<% messages.each do |message| %>
  <% if message.sender_id == @patient.id %>
    <%= render partial: 'chat/chats/partials/my_message', locals: {chat_message: message} %>
  <% else %>
    <%= render partial: 'chat/chats/partials/other_message', locals: {chat_message: message} %>
  <% end %>
<% end %>